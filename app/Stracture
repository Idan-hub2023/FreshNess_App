│
│   ├── auth/                      # Authentication pages
│   │   ├── welcome.tsx           # Welcome (Sign Up | Login)
│   │   ├── login.tsx             # Login screen
│   │   └── signup.tsx            # Sign up screen
│
│   ├── customer/                  # All customer features
│   │   ├── home.tsx              # Dashboard (main menu)
│   │   ├── book.tsx              # Book Laundry Pickup
│   │   ├── track.tsx             # Track My Order
│   │   ├── pricing.tsx           # Pricing page
│   │   ├── orders.tsx            # My Orders history
│   │   └── support.tsx           # FAQs, Contact, Help
│
├── rider/
│   ├── RiderDashboard.tsx
│   ├── OrderDetailsScreen.tsx
